<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block px-5 py-2 bg-zinc-800 outline-none rounded-md w-full"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block px-5 py-2 bg-zinc-800 outline-none rounded-md w-full resize-none mt-2"
            placeholder="Write task details over here..."
            name="details"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){ %>
            <%files.forEach(function(val){ %>
                <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md text-white">
                    <h1 class="text-3xl tracking-tighter"><%= val%></h1>
                    <a class="text-blue-500 inline-block mt-3" href="/files/<%=val%>">Read More...</a>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-zinc-400">no tasks yet.</h3>
        <% } %>
      </div>
    </div>
    <script src="javascripts/script.js"></script>
  </body>
</html>
